{{!-- ./views/edit.handlebars --}}
<div class="container col-lg-6 mt-4" id="edit">
  <div id="title" class="my-4">
    <span>*為必填欄位</span>
    <h1 class="d-inline-block text-center">請修改您的支出</h1>
  </div>
  <form action="/records/{{{record.id}}}?_method=PUT" method="POST">
    {{!-- name --}}
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">名稱<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input name="name" type="text" class="form-control" id="name" value="{{{record.name}}}" placeholder="請輸入支出名稱..."
          required>
      </div>
    </div>
    {{!-- merchant (not required) --}}
    <div class="form-group row">
      <label for="merchant" class="col-sm-2 col-form-label">商家</label>
      <div class="col-sm-10">
        <input name="merchant" type="text" class="form-control" id="merchant" placeholder="請輸入商家名稱..."
          value={{{record.merchant}}}>
      </div>
    </div>
    {{!-- date --}}
    <div class="form-group row" id="date">
      <label for="date" class="col-sm-2 col-form-label">金額<span class="text-danger">*</span></label>
      <div class="input-group date col-sm-10" id="datetimepicker4" data-target-input="nearest">
        <input name="date" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"
          value="{{{record.date}}}" placeholder="輸入或點擊日曆選擇日期...(e.g. 2019/09/18)" required />
        <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>
    {{!-- category --}}
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">種類<span class="text-danger">*</span></label>
      <div class="input-group col-sm-10">
        <select name="category" class="form-control btn btn-secondary dropdown-toggle" href="#" role="button">
          <option value='home' {{#ifEquals record.category 'home' }}selected{{/ifEquals}}>家居物業
          </option>
          <option value='shuttle-van' {{#ifEquals record.category 'shuttle-van' }}selected{{/ifEquals}}>
            交通出行</option>
          <option value='grin-beam' {{#ifEquals record.category 'grin-beam' }}selected{{/ifEquals}}>
            休閒娛樂</option>
          <option value='utensils' {{#ifEquals record.category 'utensils' }}selected{{/ifEquals}}>
            餐飲食品</option>
          <option value='pen' {{#ifEquals record.category 'pen'}}selected{{/ifEquals}}>其他</option>
        </select>
      </div>
    </div>
    {{!-- amount --}}
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label">金額<span class="text-danger">*</span></label>
      <div class="input-group col-sm-10">
        <input name="amount" type="number" class="form-control" min=0 data-target="#datetimepicker4"
          value="{{{record.amount}}}" placeholder="請輸入金額..." required />
      </div>
    </div>
    <div class="text-center">
      <button class="btn btn-primary btn-lg px-4" type="submit">送出</button>
    </div>
  </form>
</div>