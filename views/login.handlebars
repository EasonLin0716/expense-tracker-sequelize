{{!-- views/login.handlebars --}}

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      {{> messages}}
      <form action="/users/login" method="POST" id="login">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            required />
        </div>
        <div class="row d-flex justify-content-center">
          <button type="submit" class="btn btn-lg btn-block btn-success mb-2">Login</button>
          <a href="/auth/facebook" class="btn btn-lg btn-block btn-primary">Facebook Login</a>
        </div>
      </form>
      <p class="lead mt-4" id="register">
        沒有帳號嗎？&nbsp;<a href="/users/register">註冊一個</a>！
      </p>
    </div>
  </div>
</div>