{{!-- ./views/new.handlebars --}}
<div class="container col-lg-6 mt-4" id="new">
  <form action="/records" method="POST">
    <div id="title" class="my-4">
      <span>*為必填欄位</span>
      <h1 class="d-inline-block text-center">請輸入您的支出</h1>
    </div>
    {{> messages}}
    {{!-- name --}}
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">名稱<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input name="name" type="text" class="form-control" id="name" placeholder="請輸入支出名稱..." required>
      </div>
    </div>
    {{!-- merchant (not required) --}}
    <div class="form-group row">
      <label for="merchant" class="col-sm-2 col-form-label">商家</label>
      <div class="col-sm-10">
        <input name="merchant" type="text" class="form-control" id="merchant" placeholder="請輸入商家名稱...">
      </div>
    </div>
    {{!-- date --}}
    <div class="form-group row" id="date">
      <label for="date" class="col-sm-2 col-form-label">日期<span class="text-danger">*</span></label>
      <div class="input-group date col-sm-10" id="datetimepicker4" data-target-input="nearest">
        <input name="date" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4"
          placeholder="輸入或點擊日曆選擇日期...(e.g. 2019/09/18)" maxlength="10" required />
        <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>
    {{!-- category --}}
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label" required>種類<span class="text-danger">*</span></label>
      <div class="input-group col-sm-10">
        <select name="category" class="form-control btn btn-secondary dropdown-toggle" href="#" role="button">
          <option value='home'>家居物業</option>
          <option value='shuttle-van'>交通出行</option>
          <option value='grin-beam'>休閒娛樂</option>
          <option value='utensils'>餐飲食品</option>
          <option value='pen'>其他</option>
        </select>
      </div>
    </div>
    {{!-- amount --}}
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label">金額<span class="text-danger">*</span></label>
      <div class="input-group col-sm-10">
        <input name="amount" type="number" class="form-control" min=0 data-target="#datetimepicker4"
          placeholder="請輸入金額..." required />
      </div>
    </div>
    <div class="text-center">
      <button class="btn btn-primary btn-lg px-4" type="submit">送出</button>
    </div>
  </form>
</div>